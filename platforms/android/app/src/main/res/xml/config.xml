<?xml version='1.0' encoding='utf-8'?>
<widget id="org.devwerx.provost" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="BackgroundMode">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundMode" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NewRelicCordovaPlugin">
        <param name="android-package" value="com.newrelic.cordova.plugin.NewRelicCordovaPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SpeechRecognition">
        <param name="android-package" value="com.pbakondy.SpeechRecognition" />
    </feature>
    <name>Provost</name>
    <description>
        Service runner
    </description>
    <author email="devops@sofwerx.org" href="http://sofwerx.org">
        SOFWERX
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:debuggable="true" />
    </edit-config>
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="KeepRunning" value="true" />
    <preference name="ANDROID_APP_TOKEN" value="AA1a3f195932875df9f6323f4f7aba09ffc97ac362" />
    <preference name="PLUGIN_VERSION" value="5.0.0" />
</widget>
